generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum ImageType {
    COVER
    AVATAR
    POST
}

model Post {
    id           String       @id @default(cuid())
    title        String
    description  String?      @default("")
    is_release   Boolean      @default(false)
    content      String       @db.Text
    release_date DateTime?    @default(now())
    PostOnTag    PostOnTags[]
    Category     Category?    @relation(fields: [category_id], references: [id])
    category_id  String?
    images       Image[]
    created_at   DateTime     @unique @default(now())
    update_at    DateTime     @unique @default(now())

    @@map("t_nico_post")
}

model Image {
    id      String    @id @default(cuid())
    name    String
    url     String
    type    ImageType @default(POST)
    Post    Post?     @relation(fields: [post_id], references: [id])
    post_id String?

    @@map("t_nico_image")
}

model Config {
    id             String   @id @default(cuid())
    blog_title     String   @unique
    blog_introduce String   @db.Text
    slogan         String?
    socials        Social[]

    @@map("t_nico_config")
}

model Social {
    id       String  @id @default(cuid())
    name     String? @unique
    url      String?
    Config   Config? @relation(fields: [configId], references: [id])
    configId String? @map("config_id")

    @@map("t_nico_social")
}

model Tag {
    id        String       @id @default(cuid())
    name      String
    icon      String?
    PostOnTag PostOnTags[]

    @@map("t_nico_tag")
}

model PostOnTags {
    post_id String
    tag_id  String
    post    Post   @relation(fields: [post_id], references: [id])
    tag     Tag    @relation(fields: [tag_id], references: [id])

    @@unique([post_id, tag_id])
    @@map("t_nico_post_on_tag")
}

model Category {
    id   String  @id @default(cuid())
    name String
    icon String?
    Post Post[]

    @@map("t_nico_category")
}

model User {
    id       String @id @default(cuid())
    username String @unique
    password String

    @@map("t_nico_user")
}
